{% extends "layout.njk" %}
{% block content %}
  <section class="recipes container">
    <div class="cards">
      {% for recipe in recipes %}
        <div class="card">
          <div class="card-image">
            <img src="{{ recipe.image }}" alt="{{ recipe.title }}"/>
          </div>
          <div class="card-content">
            <h3>{{ recipe.title }}</h3>
            <h4>por {{ recipe.author }}</h4>
          </div>
        </div>
      {% endfor %}
    </div>
  </section>
{% endblock content %}