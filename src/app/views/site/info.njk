{% extends "site/layout.njk" %}
{% block content %}
  <section class="recipe container">
    <div class="recipe-header">
      <img src="{{ recipe.image }}" alt="">
        <div class="title">
          <h1>{{ recipe.title }}</h1>
          <h3>{{ recipe.chef_name }}</h3>
        </div>
      </div>
      <div class="recipe-infos">
        <div class="ingredients">
          <div class="title">
            <h2>Ingredientes</h2>
            <button onclick="showHideContentOfRecipe('ingredients')">Esconder</button>
          </div>
          <div class="content">
            <ul>
              {% for ingredient in recipe.ingredients %}
                <li>{{ ingredient }}</li>
              {% endfor %}
            </ul>
          </div>
        </div>
        <div class="preparation">
          <div class="title">
            <h2>Modo de preparo</h2>
            <button onclick="showHideContentOfRecipe('preparation')">Esconder</button>
          </div>
          <div class="content">
            <ul>
              {% for step in recipe.preparation %}
                <li>{{ step }}</li>
              {% endfor %}
            </ul>
          </div>
        </div>
        <div class="information">
          <div class="title">
            <h2>Informações adicionais</h2>
            <button onclick="showHideContentOfRecipe('information')">Esconder</button>
          </div>
          <div class="content">
            <p>{{ recipe.information }}</p>
          </div>
        </div>
      </div>
    </section>
  {% endblock content %}