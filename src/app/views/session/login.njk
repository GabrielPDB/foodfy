    <form action="/login" method="POST" class="adminForm loginForm">
      <div class="formItem">
        <h5>Email</h5>
        <input type="email" name="email" value="{{ user.email }}" placeholder="Digite o email" value="{{ user.email }}" {% if error %} class="inputError" {% endif %}/>
      </div>
      <div class="formItem">
        <h5>Senha</h5>
        <input type="password" name="password" placeholder="Digite a senha" {% if error %} class="inputError" {% endif %}/>
      </div>
      <div class="actions">
        <a href="/forgot">Perdeu a senha?</a>
        <button type="submit" class="buttonConfirm">Acessar</button>
      </div>
    </form>
  </section>
{% endblock content %}