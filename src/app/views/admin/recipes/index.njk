{% extends "admin/layout.njk" %}
{% block content %}
  <section class="recipes admin container">
    <div class="action-header">
      <h2>Gerenciar receitas</h2>
      <div class="buttons">
        <a class="button" href="/admin/recipes/create">Nova receita</a>
      </div>
    </div>
    <div class="cards">
      {% for recipe in recipes %}
        <div class="card">
          <div class="card-image">
            <img src="{{ recipe.image }}" alt="{{ recipe.title }}"/>
          </div>
          <div class="card-content">
            <h3>{{ recipe.title }}</h3>
            <h4>por {{ recipe.chef_name }}</h4>
            <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </section>
{% endblock content %}