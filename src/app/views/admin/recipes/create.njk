{% extends 'admin/layout.njk' %}
{% block content %}
  <section class="recipe container">
    <div class="recipe-header">
      <div class="action-header">
        <h2>Criando receita</h2>
        <div class="buttons">
          <button type="submit" form="createRecipeForm">Salvar receita</button>
        </div>
      </div>
    </div>
    <form action="/admin/recipes" method="post" id="createRecipeForm" class="adminForm" enctype="multipart/form-data">
      {% include 'admin/recipes/fields.njk' %}
    </form>
  </section>
{% endblock content %}