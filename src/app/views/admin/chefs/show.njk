{% extends "admin/layout.njk" %}
{% block content %}
  <section class="chef admin container">
    <div class="chef-header">
      <div class="action-header">
        <h2>Chef: {{ chef.name }}</h2>
        <a class="button" href="/admin/chefs/{{ chef.id }}/edit">Editar chef</a>
      </div>
      <div class="chef-image">
        <img src="{{ chef.avatar_url }}" alt="Imagem de {{ chef.name }}"/>
      </div>
      <div class="chef-title">
        <h1>{{ chef.name }}</h1>
        <h3>Algumas receitas</h3>
      </div>
    </div>
    <div class="recipes_of_chef">
      <h2>Receitas</h2>
      <div class="cards">
        {% for recipe in recipes %}
          <div class="card">
            <div class="card-image">
              <img src="{{ recipe.image }}" alt="{{ recipe.title }}"/>
            </div>
            <div class="card-content">
              <h3>{{ recipe.title }}</h3>
              <h4>por {{ recipe.author }}</h4>
              <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
{% endblock content %}