{% extends "admin/layout.njk" %}
{% block content %}
  <section class="chefs admin container">
    <div class="action-header">
      <h2>Gerenciar chefs</h2>
      <div class="buttons">
        <a class="button" href="/admin/chefs/create">Novo chef</a>
      </div>
    </div>
    <div class="cards">
      {% for chef in chefs %}
        <div class="card">
          <div class="card-image">
            <img src="{{ chef.avatar_url }}" alt="Imagem de {{ chef.name }}"></div>
            <div class="card-content">
              <h3>{{ chef.name }}</h3>
              <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
            </div>
          </div>
        {% endfor %}
      </div>
    </section>
  {% endblock content %}