{% extends 'admin/layout.njk' %}
{% block content %}
  <section class="user container">
    <div class="user-header">
      <div class="action-header">
        <h2>Usu√°rios</h2>
        <div class="buttons">
          <a class="button buttonConfirm" href="/admin/users/create">Novo</a>
        </div>
      </div>
    </div>
    <div class="user cards">
      {% for user in users %}
        <div class="card">
          <div class="card-name">
            <h3>{{ user.name }}</h3>
          </div>
          <div class="card-email">
            <h3>{{ user.email }}</h3>
          </div>
          <div class="card-buttons">
            <a href="/admin/users/{{ user.id }}/edit" class="button buttonConfirm">Editar</a>
            {# <a href="/admin/users/{{ user.id }}" class="button">Remover</a> #}
            <button type="submit" form="deleteUser{{ user.id }}Form" onclick="confirmDelete(event)" class="buttonDelete">Remover</button>
          </div>
          <form action="/admin/users/{{ user.id }}?_method=DELETE" method="post" id="deleteUser{{ user.id }}Form"><input type="hidden" name="id" value="{{ user.id }}"/> </form>
        </div>
      {% endfor %}
    </div>
  </section>
{% endblock content %}